{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "telebara",
  "version": "0.1.0",
  "identifier": "com.telebara.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "telebara",
        "width": 800,
        "height": 600,
        "minWidth": 300,
        "minHeight": 200
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
